{
  "compilerOptions": {
    "target": "es2020",
    "outDir": "./dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  // Include TS files to type check. 
  // Only specific files are packaged in package.json > files.
  "include": [
    "./hardhat",
    "./typechain-types",
    "./src",
    "./scripts",
    "./lib",
    "./test",
  ],
  "exclude": [
    "./dist",
    "./node_modules"
  ],
  "files": [
    "./hardhat.config.ts",
  ]
}