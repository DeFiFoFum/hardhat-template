{
  "compilerOptions": {
    "target": "es2020",
    "outDir": "./dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  // Include TS files to type check. 
  // Only specific files are packaged in package.json > files.
  "include": [
    "hardhat",
    "index.ts",
    "artifacts/**/*.json",
    "typechain-types",
    "src",
    "tasks",
    "scripts",
    "test",
    "hardhat.config.ts"
  ],
  "exclude": []
}