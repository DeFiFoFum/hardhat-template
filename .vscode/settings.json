{
    "workbench.colorCustomizations": {
        "activityBar.background": "#fff000",
        "activityBar.foreground": "#000000",
        "titleBar.activeForeground": "#ffff00",
        "titleBar.activeBackground": "#000000",
    },
    "editor.formatOnSave": true,
    "mochaExplorer.files": [
        "test/**/*.+(js|ts)",
    ],
    // Enable markdown snippets
    "[markdown]": {
        "editor.quickSuggestions": {
            "other": "on"
        }
    },
    "cSpell.words": [
        "ARBISCAN",
        "bignumber",
        "Cheatcodes",
        "dont",
        "linea",
        "lineascan",
        "mixedcase",
        "Moralis",
        "moralisweb",
        "nomicfoundation",
        "nomiclabs",
        "Numberish",
        "POLYGONSCAN",
        "precommit",
        "semgrep",
        "sepolia",
        "Snapshotter",
        "telos",
        "TELOSSCAN",
        "WBNB",
        "YYYYMMDDTHH"
    ]
}